<odoo>
    <record model="ir.ui.view" id="stock_view_picking_form">
        <field name="name">stock.view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_packages']" position="before">
                <group name="group_delivery_packaging"
                       string="Delivery Packaging">
                    <field name="product_packaging_id" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
